<!-- app/views/categories/show.html.erb -->
<%= render 'shared/header', title: 'CATEGORY DETAILS' %>


<div>
  <h1><%= @category.name %></h1>
  <% if @category.icon.attached? %>
    <%= image_tag url_for(@category.icon), width: 100, height: 100 %>
  <% end %>
  <!-- Display other category details as needed -->
  <h2>Expenses:</h2>
  <% total_amount = 0 %>
  <% @category.expenses.each do |expense| %>
    <div>
      <p><strong><%= expense.name %></strong> </p>
      <p><%= number_to_currency(expense.amount) %></p>
      <p><%= expense.created_at.to_formatted_s(:long) %></p>
      <!-- You can display other details of the expense as needed -->
    </div>
    <hr>
    <% total_amount += expense.amount %>
  <% end %>

<%= render 'shared/total_amount', total_amount: total_amount %>

  </div>
</div>

<%= render 'shared/footer', title: 'ADD NEW EXPENSE' %>